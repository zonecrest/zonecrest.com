---
layout: base.njk
---

<div class="header-banner">
    <div class="logo-section">
        <img src="{{ branding.logoImage }}" alt="{{ branding.siteTitle }} Logo" class="logo">
    </div>
    <div class="title-section">
        <h1 class="site-title">{{ branding.siteTitle }}</h1>
    </div>
</div>

<div class="landing-page">
    {{ content | safe }}
    
    <!-- CTA Button will be automatically styled -->
    <div class="cta-section">
        <button class="cta-button" onclick="showContactForm()">
            Get Started Today
        </button>
    </div>
</div>